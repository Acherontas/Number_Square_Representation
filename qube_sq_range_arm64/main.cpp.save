    cout<<"enter number \n";
    xpi=stold(argv[1]);
    long double xpik=0;
    long long int xp=0;
    xpik=sqrt(xpi);
    long double fractpart,intpart;
    fractpart=modf(xpik,&intpart);
    xp=intpart;
    cout<<"the sq is " << xpik << "  with intpart " << xp  <<"\n";
    long long int xt=0;
    long long int mxt=0;
    long long int xmt=0;
    int lpos=0;
    int xts=1;
    for(int i=1;i<=xpi;i+=xp)
    {
      xt=i+xp;
      mxt=0;
      xmt=i;
      //cout<<i << " " << xt-1 <<"\n";
      mxt=i;
      lpos=0;
      cout<<xts << " :: ";
      while(xmt<=xt-1){cout<<mxt << " " ; mxt+=1; xmt+=1; lpos+=1; if(xmt==xpi+1){break;}}

      cout<<"\n";
      xts+=1;


    }
    if(xts<=xp){cout<<"non usable\n";}
    cout<<"last pos " << lpos <<"\n";
    return 0;
}
